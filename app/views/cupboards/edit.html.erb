<h1>Edit cupboard</h1>


<div class="control-group">
  <!-- NEUTRAL1 -->
	<h1>Choose 2 neutrals</h1>
  <h2>Neutral 1</h2>
  <%= form_for [@cupboard], url: {action: "update"} do |f| %>
	<label class="control control--radio" style="background-color: white;">White
		<%= f.radio_button(:neutral1, "#FFFFFF") %>
		<div class="control__indicator"></div>
	</label>
	<label class="control control--radio" style="background-color: #804002;">Brown
		<%= f.radio_button(:neutral1, "#804002") %>
		<div class="control__indicator"></div>
	</label>
	<label class="control control--radio" style="background-color: #808080;">Grey
		<%= f.radio_button(:neutral1, "#808080") %>
		<div class="control__indicator"></div>
	</label>
	<label class="control control--radio" style="background-color: black;">Black
		<%= f.radio_button(:neutral1, "#000000") %>
		<div class="control__indicator"></div>
	</label>
  <label class="control control--radio" style="background-color: #EADAC1;">Beige
    <%= f.radio_button(:neutral1, "#EADAC1") %>
    <div class="control__indicator"></div>
  </label>
  <label class="control control--radio" style="background-color: #F7EEE5;">Cream
    <%= f.radio_button(:neutral1, "#F7EEE5") %>
    <div class="control__indicator"></div>
  </label>
  <label class="control control--radio" style="background-color: #715F39;">Mud
    <%= f.radio_button(:neutral1, "#715F39") %>
    <div class="control__indicator"></div>
  </label>
  <label class="control control--radio" style="background-color: #02247D;">Blue
    <%= f.radio_button(:neutral1, "#02247D") %>
    <div class="control__indicator"></div>
  </label>

  <br><br><br>


  <!-- NEUTRAL2 -->
  <h2>Neutral 2</h2>
  <label class="control control--radio" style="background-color: white;">White
		<%= f.radio_button(:neutral2, "#FFFFFF") %>
		<div class="control__indicator"></div>
	</label>
	<label class="control control--radio" style="background-color: #804002;">Brown
		<%= f.radio_button(:neutral2, "#804002") %>
		<div class="control__indicator"></div>
	</label>
	<label class="control control--radio" style="background-color: #808080;">Grey
		<%= f.radio_button(:neutral2, "#808080") %>
		<div class="control__indicator"></div>
	</label>
	<label class="control control--radio" style="background-color: black;">Black
		<%= f.radio_button(:neutral2, "#000000") %>
		<div class="control__indicator"></div>
	</label>
  <label class="control control--radio" style="background-color: #EADAC1;">Beige
    <%= f.radio_button(:neutral2, "#EADAC1") %>
    <div class="control__indicator"></div>
  </label>
  <label class="control control--radio" style="background-color: #F7EEE5;">Cream
    <%= f.radio_button(:neutral2, "#F7EEE5") %>
    <div class="control__indicator"></div>
  </label>
  <label class="control control--radio" style="background-color: #715F39;">Mud
    <%= f.radio_button(:neutral2, "#715F39") %>
    <div class="control__indicator"></div>
  </label>
  <label class="control control--radio" style="background-color: #02247D;">Blue
    <%= f.radio_button(:neutral2, "#02247D") %>
    <div class="control__indicator"></div>
  </label>
  <%= f.submit %>
<% end %>
</div>
